<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feedback - Max Hospital</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background-color: #f4f7fc;
            font-family: 'Arial', sans-serif;
        }
        .navbar {
            background: linear-gradient(135deg, #007bff, #004aad);
            padding: 15px;
            margin-bottom: 30px;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        .feedback-form {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            margin-bottom: 30px;
            animation: slideDown 0.5s ease-out;
        }
        .feedback-list {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }
        .feedback-item {
            border-bottom: 1px solid #eee;
            padding: 20px 0;
            animation: fadeIn 0.5s ease-out;
        }
        .feedback-item:last-child {
            border-bottom: none;
        }
        .rating {
            color: #ffc107;
            font-size: 20px;
            margin: 10px 0;
        }
        .form-control:focus {
            box-shadow: 0 0 0 0.2rem rgba(0,123,255,0.25);
            border-color: #80bdff;
        }
        .btn-submit {
            background: linear-gradient(135deg, #007bff, #004aad);
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 25px;
            font-weight: bold;
            transition: all 0.3s ease;
        }
        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
        @keyframes slideDown {
            from {
                transform: translateY(-20px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }
        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
        .star-rating {
            display: flex;
            flex-direction: row-reverse;
            justify-content: flex-end;
        }
        .star-rating input {
            display: none;
        }
        .star-rating label {
            cursor: pointer;
            font-size: 25px;
            color: #ddd;
            padding: 5px;
        }
        .star-rating label:hover,
        .star-rating label:hover ~ label,
        .star-rating input:checked ~ label {
            color: #ffc107;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <a class="navbar-brand text-white" href="/dashboard">üè• Max Hospital</a>
            <div>
                <a href="/dashboard" class="btn btn-outline-light">Back to Dashboard</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="feedback-form">
            <h2 class="mb-4">Share Your Feedback</h2>
            <form action="/feedback" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Rating</label>
                    <div class="star-rating">
                        <input type="radio" id="star5" name="rating" value="5" required>
                        <label for="star5" class="fas fa-star"></label>
                        <input type="radio" id="star4" name="rating" value="4">
                        <label for="star4" class="fas fa-star"></label>
                        <input type="radio" id="star3" name="rating" value="3">
                        <label for="star3" class="fas fa-star"></label>
                        <input type="radio" id="star2" name="rating" value="2">
                        <label for="star2" class="fas fa-star"></label>
                        <input type="radio" id="star1" name="rating" value="1">
                        <label for="star1" class="fas fa-star"></label>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Your Message</label>
                    <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
                </div>
                <button type="submit" class="btn btn-submit">Submit Feedback</button>
            </form>
        </div>

        <div class="feedback-list">
            <h3 class="mb-4">Recent Feedback</h3>
            <% feedbacks.forEach(function(feedback) { %>
                <div class="feedback-item">
                    <h5><%= feedback.name %></h5>
                    <div class="rating">
                        <% for(let i = 0; i < feedback.rating; i++) { %>
                            <i class="fas fa-star"></i>
                        <% } %>
                        <% for(let i = feedback.rating; i < 5; i++) { %>
                            <i class="far fa-star"></i>
                        <% } %>
                    </div>
                    <p class="text-muted"><small><%= new Date(feedback.createdAt).toLocaleDateString() %></small></p>
                    <p><%= feedback.message %></p>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html> 